<p><strong>Title: </strong><%= @image.name %></p>

<p><strong>Photographer: </strong><%= link_to @image.user.username, @image.user %></p>

<%- model_class = Image -%>
<dl class="dl-horizontal">
  <dd><%= image_tag(@image.picture.url, size: "600x450") if @image.picture? %></dd>
</dl>

<%= link_to "Back", request.referer, :class => 'btn btn-default' %>

<% if current_user == @image.user %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_image_path(@image), :class => 'btn btn-default' %>

  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  image_path(@image),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>

<% end %>

<% obj.each do |trail| %>
<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
            <div class="article-title">
                <%= link_to trail.name, trail_path(trail) %>
            </div>
            <div class="article-body">
                <%= truncate(trail.description, length: 100) %>
           </div>
             <% if logged_in? && current_user.admin? %>
                <div class="article-actions">
                    <%= link_to "Edit this trail", edit_trail_path(trail), class: "btn btn-xs btn-primary" %>
                    <%= link_to "Delete this trail", trail_path(trail), method: :delete,
                    data: { confirm: "Are you sure you want to delete the trail?"},
                    class: "btn btn-xs btn-danger" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<% end %>

